    "build": "bun build ./src/index.ts --minify --outdir ./public/static/bundle"
  },
  "author": "Alessio Saltarin <alessiosaltarin@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "ts-loader": "^9.4.4",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "http-server": "^14.1.1",
    "bun-types": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
